<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foundationcontrols">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 单独给FruitActivity 指定了FruitActivityTheme 这个主题 -->
        <activity
            android:name=".FruitDetailsActivity"
            android:exported="false"
            android:theme="@style/FruitActivityTheme" /> <!-- android:label属性，用于指定在Toolbar中显示的文字内容，如果没有指定的话，会默认使用application中指定的label内容，也就是我们的应用名称 -->
        <activity
            android:name=".BottomNavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".TabButtonActivity"
            android:exported="false"/>
        <activity
            android:name=".TabPagerActivity"
            android:exported="false"/>
        <activity
            android:name=".Toolbar2Activity"
            android:exported="false"/>
        <activity
            android:name=".OverflowMenuActivity"
            android:exported="false"/>
        <activity
            android:name=".TabLayoutActivity"
            android:exported="false"/>
        <activity
            android:name=".RecyclerLinearActivity"
            android:exported="false"/>
        <activity
            android:name=".RecyclerGridActivity"
            android:exported="false"/>
        <activity
            android:name=".RecyclerCombineActivity"
            android:exported="false"/>
        <activity
            android:name=".RecyclerStaggeredActivity"
            android:exported="false"/>
        <activity
            android:name=".RecyclerDynamicActivity"
            android:exported="false"/>
        <activity
            android:name=".SwipeRecyclerActivity"
            android:exported="false"/>
        <activity
            android:name=".ViewPager2RecyclerActivity"
            android:exported="false"/>
        <activity
            android:name=".ViewPager2FragmentActivity"
            android:exported="false"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>